{
  "name": "scrapechain-monorepo",
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@types/bun": "latest",
    "tsup": "^8.5.0",
    "typescript": "^5"
  },
  "packageManager": "bun@1.2.4",
  "private": true,
  "scripts": {
    "build": "bun run --filter './packages/*' build",
